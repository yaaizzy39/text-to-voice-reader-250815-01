{
  "manifest_version": 3,
  "name": "Text to Voice Reader",
  "version": "1.0.0",
  "description": "選択したテキストをAIVIS音声で読み上げるChrome拡張",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.aivis-project.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text to Voice Reader"
  }
}