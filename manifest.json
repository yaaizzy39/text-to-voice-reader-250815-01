{
  "manifest_version": 3,
  "name": "Text to Voice Reader",
  "version": "1.0.0",
  "description": "選択したテキストをAIVIS音声で読み上げるChrome拡張",
  
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.aivis-project.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text to Voice Reader"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["audio-player.html"],
      "matches": ["<all_urls>"]
    }
  ]
}